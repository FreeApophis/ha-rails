<% @lights.each do |light| %>
  <a class="tile" style="background-color: hsl(<%= (light.hue / 255) %> ,<%= (light.saturation / 2.55).to_i %>% ,<%= (light.brightness / 2.55).to_i %>%)")>
    <span><%= light.name %></span>
    <i class="fa fa-3x fa-lightbulb-o <%= light.on? ? "on" : "off" %> "></i>
  </a>
<% end %>
