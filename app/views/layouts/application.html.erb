
<!DOCTYPE html>
<html>
  <head>
    <title>HaRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="raspberry screen">
      <div class="topbar">
        <div class="date"><%= l Date.today, format: :short %></div>
        <div class="refresh fa fa-refresh fa-fw" onclick="history.go(0)"></div>
        <div class="clock"><%= DateTime.now.strftime("%H:%M") %></div>
      </div>
      <div class="container">
        <div class="sidebar">
          <%= render 'menu' %>
        </div>
        <div class="content">
          <%= yield %>
        </div>
      </div>


    <div>
  </body>
</html>
